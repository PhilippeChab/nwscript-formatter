{
  "name": "nwscript-formatter",
  "displayName": "nwscript-formatter",
  "description": "A formatter for the NWScript language.",
  "icon": "NWN.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/PhilippeChab/nwscript-formatter"
  },
  "license": "MIT",
  "version": "1.3.2",
  "author": {
    "name": "Philippe Chabot"
  },
  "publisher": "PhilippeChab",
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Formatters"
  ],
  "keywords": [
    "NWScript",
    "Neverwinter Script",
    "Neverwinter Nights",
    "Neverwinter Nights: EE"
  ],
  "activationEvents": [
    "onLanguage:nwscript"
  ],
  "preview": true,
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "NWScript Formatter Configuration",
      "properties": {
        "nwscript-formatter.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enables formatting for NWScript."
        },
        "nwscript-formatter.executable": {
          "type": "string",
          "default": "clang-format",
          "description": "Clang's executable path."
        },
        "nwscript-formatter.style": {
          "type": "object",
          "default": {
            "BasedOnStyle": "Google",
            "AlignTrailingComments": true,
            "AlignConsecutiveAssignments": true,
            "ColumnLimit": 250,
            "BreakBeforeBraces": "Allman",
            "AlignEscapedNewlinesLeft": true,
            "AlwaysBreakBeforeMultilineStrings": true,
            "MaxEmptyLinesToKeep": 1,
            "TabWidth": 4,
            "IndentWidth": 4,
            "UseTab": "Always"
          },
          "description": "Style for the formatter."
        },
        "nwscript-formatter.ignoredPaths": {
          "type": "array",
          "default": [],
          "description": "Glob patterns to ignore.",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "async": "^3.2.3",
    "global": "^4.4.0",
    "sax": "^1.2.4",
    "vsce": "^2.7.0"
  },
  "devDependencies": {
    "@types/async": "^3.2.13",
    "@types/node": "14.x",
    "@types/sax": "^1.2.4",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "eslint": "^8.14.0",
    "prettier": "^2.6.2",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.4",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2"
  }
}
