{
  "name": "nwscript-formatter",
  "displayName": "nwscript-formatter",
  "description": "A formatter for the NWScript language.",
  "icon": "NWN.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/PhilippeChab/nwscript-formatter"
  },
  "license": "MIT",
  "version": "1.0.0",
  "publisher": "PhilippeChab",
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Formatters"
  ],
  "keywords": [
    "NWScript"
  ],
  "activationEvents": [
    "onLanguage:nwscript"
  ],
  "preview": true,
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "NWScript Formatter Configuration",
      "properties": {
        "nwscript-formatter.executable": {
          "type": "string",
          "default": "clang-format",
          "description": "Clang executable path."
        },
        "nwscript-formatter.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enables formatting for NWScript."
        },
        "nwscript-formatter.style": {
          "type": "string",
          "default": "",
          "description": "Style for the formatter."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "global": "^4.4.0",
    "sax": "^1.2.4",
    "vsce": "^2.7.0"
  },
  "devDependencies": {
    "@types/node": "14.x",
    "@types/sax": "^1.2.4",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "eslint": "^8.14.0",
    "prettier": "^2.6.2",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.4",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2"
  }
}
